@model IEnumerable<BookStoreWeb.Models.Sach>
@{
    ViewBag.Title = "Sách theo chủ đề";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="text-align: center; color: crimson; margin-bottom: 25px">SÁCH THEO CHỦ ĐỀ</h3>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "BookStore", new {id = book.MaSach})"></a>
                <img alt="@book.TenSach" src="~/images/@book.AnhBia" width="100">

                <div>
                    <br />
                    <h4 style="text-align:center">
                        @book.TenSach
                    </h4>
                    <p></p>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                        <div id="Chitetsp">
                            @Html.ActionLink("Chi tiết sản phẩm", "Details", new { id = book.MaSach })
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>
@*css nút chi tiết sản phẩm*@
<style type2="text/css">
    #Chitetsp a {
        clear: both;
        background-color: crimson;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        border-radius: 3px;
        margin-left: -10px;
    }

        #Chitetsp a:hover {
            background-color: #5a5e60;
            color: white;
            cursor: pointer;
        }
</style>