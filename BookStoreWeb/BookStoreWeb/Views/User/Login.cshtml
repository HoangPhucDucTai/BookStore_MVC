@model BookStoreWeb.Models.KhachHang

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<table align="center">
    <h2 style="text-align:center; color:crimson; text-transform:uppercase">Đăng nhập</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDangNhap")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>  Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="Đăng nhập" />
            </td>
        </tr>
    }
    
</table>
<h3 style="color:crimson; text-align:center"> @ViewBag.Thongbao</h3>
